.search-product-result {
  .hide-display {
    visibility: hidden;
  }
}

.search-product-listview-items {
  padding: 20px;
}

.search-result-gridview-items {
  position: relative;

  list-style: none;

  &::before{
    content: "";
    display: table;
  }

  &::after {
    content: "";
    display: table;

    clear: both;
  }

  .search-result-grid-unit {
    float: left;
    display: inline-block;
    width: 25%;
    border-bottom: 1px solid $grey-very-light;
    text-align: center;

    @media (min-width: $breakpoint-xl) {
      width: 20%;
    }
  }
}
