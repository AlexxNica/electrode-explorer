n-width(n) {
  if(n < 2) {
    width: 100%;
  }
  else {
    $width = 48 * n - 48;
    $adjusted = $width - 2*n + 4;
    width: "calc((100% - %spx) / %s)" % ($adjusted n)
  }
}

.bundle-image-list {
  padding-left: 0;
  text-align: center;

  .plus-sign {

    to-rem(font-size, 38px);

    vertical-align: middle;
    margin: 0 12px;
    width: 20px;

    color: $blue;
    font-weight: bold;
  }

  .list-item {
    vertical-align: middle;

    &.size-1-1 {
      n-width(1);
    }

    &.size-1-2 {
      n-width(2);

      to-rem(font-size, 14px);

      .item-title h3 {
        to-rem(font-size, 14px);

        height: 51px;
      }
    }

    &.size-1-3 {
      n-width(3);

      to-rem(font-size, 13px);

      .item-title h3 {
        to-rem(font-size, 13px);

        height: 47px;
      }
    }

    &.size-1-4 {
      n-width(4);

      to-rem(font-size, 12px);

      .item-title h3 {
        to-rem(font-size, 12px);

        height: 44px;
      }
    }

    .bundle-image {
      width: 100%;
    }
  }
}
