    wmzindex("basic");

    margin-top: 0;
    padding: 20px;
  }
}

.address-form {
  width: 100%;
}

.state-label {
  label {
    position: absolute;
    margin-top: 10px;
  }
}

.save-address {
  margin-left: 0;
  to-rem(font-size, 18px);
}

.cancel-address-form {
  margin-top: $s-spacing;
  margin-left: 0;

  +breakpoint($breakpoint-s) {
    margin: $xs-spacing 15px 0;
  }
}

.btn-fake-link-large {
  &.btn-link {
    to-rem(font-size, 18px);

    font-weight: 600;
  }
  &.btn-fake-link {
    text-align: center;
  }
}

.address-form-preferred-address-wrapper {
  // visually equal space above and below
  &.option {
    margin-top: 21px;
  }

  +breakpoint($screen-m) {
    // align visually with confirm/cancel buttons
    &.option {
      margin-top: 31px;
    }
  }

  input:checked + label {
    option-checkout-active();
  }

  // IE7 and IE8 Compatibility
  &.selected label {
    option-checkout-active();
  }
}

