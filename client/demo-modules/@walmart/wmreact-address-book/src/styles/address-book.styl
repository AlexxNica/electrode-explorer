    margin-top: 0px;
  }
  .form-label {
    margin: 5px 0 0 10px;
    color: $grey-medium;
    font-size: 0.835em;
  }
}

.shipping-accordion-cancel {
  display: inline-block;
  margin-top: 10px;
  margin-right: 10px;
}

.preferred-address {
  margin-bottom: 0;
  margin-top: 12px;
  color: $grey-medium;
}
