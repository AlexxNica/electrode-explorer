.header-GlobalAccountFlyout {
  padding: 3px $s-spacing 2px 0;
  border-right: 1px solid $white;

  .dropdown-link:hover:after {
    transform: rotate(315deg);
  }
  .dropdown-link:after {
    content: "";
    display: inline-block;
    height: 5px;
    left: 5px;

    vertical-align: top;
    width: 5px;
    border-top-color: $blue ;
    border: 4px solid $blue ;
    color: $blue ;
    top: 5px;
    border-style: solid;
    border-width: 2px 2px 0 0;
    transform: rotate(135deg);

  }

  .header-GlobalAccountFlyout-flyout {
    .flyout-modal {
      margin-top: 14px;
      width:260px;
      white-space: normal;
    }

    .separator{
      margin-bottom:2px;
      padding-top: 0;
      margin-top:9px;
    }

    .header-GlobalAccountFlyout-flyout-list li {
      margin-top: 5px;
      &:hover {
        color: $blue;
      }
    }

    .header-GlobalAccountFlyout-flyout-link {
      to-rem(font-size, 14px);
      font-weight: normal;
      line-height: 1;
      color: $black;

      &:hover {
        color: $black;
      }

      // Fix layout thrashing due to FOUT when
      // webfonts are loading.
      .wf-loading & {
        to-rem(font-size, 13px);
        letter-spacing: -.2px;
      }
    }

    .flyout-modal .header-GlobalAccountFlyout-link {
      to-rem(font-size, 14px);
    }

    .header-GlobalAccountFlyout-instructional {
      to-rem(font-size, 12px);

      margin-top: -2px;
      width: 160px;
      color: $grey-medium;

      line-height: 1.4;
    }
  }

  .header-GlobalAccountFlyout-name {
    color: $blue;
    to-rem(font-size, 13px);
    margin-top: 0;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    text-align: left;
    line-height: 1.4;

    &:hover {
      color: $yellow-hover;
    }

    // Fix layout thrashing due to FOUT when
    // webfonts are loading.
    .wf-loading & {
      to-rem(font-size, 12px);
      letter-spacing: -.1px;
      line-height: 1.2;
    }
  }
  .no-user-signin-button{
    width: 79px;
    height: 30px;
    border-radius: 2px;
    margin-bottom:4px;
    background-color: #4ca90c;
    text-align:left;
    &:hover {
      background-color: $yellow-hover;
    }
  }
  .not-a-member {
    width: 84px;
    height: 30px;
    font-size: 12px;
    line-height: 1.2;
    color: $black;
    margin-left:-16px;
    font-weight: normal;


    .join-link{
      color: $blue;
      &:hover {
        color: $yellow-hover;
      }
    }
  }
}

