.theme-tile-container {
  padding: 0;
  margin-bottom: $s-spacing;
  border: 1px solid $grey-light;
  overflow: hidden;
  width: auto;

  text-align: center;
  vertical-align: top;

  &:hover {
    border: 1px solid $grey-cool-active;
  }

  .theme-tile-heading {
    position: absolute;
    bottom: 0;
    left: 0;

    padding: $s-spacing 5px;
    opacity: 0.8;
    width: 100%;

    to-rem(font-size, 20px);
    line-height: 1.2;
    color: $grey-dark;
    background-color: $white;

    +breakpoint($breakpoint-m) {
      to-rem(font-size, 24px);
    }
  }

  .Tile-img {
    margin-top: -20%;
    margin-bottom: -20%;
    height: auto;
    width: auto;

    +breakpoint($breakpoint-m) {
      margin-top: -10%;
      margin-bottom: -10%;
    }
  }
}
