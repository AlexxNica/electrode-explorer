@require "~@walmart/wmreact-layout/src/styles/layout";
@require "~@walmart/wmreact-containers/src/styles/containers";
@require "~@walmart/wmreact-interactive/src/styles/interactive";
@require "~@walmart/wmreact-forms/src/styles/forms";

.price-display.OrderSummary-Price {
  font-size: inherit;

  &:not(.OrderSummary-Price--plain) {
    .sup:last-child {
      font-size: inherit;
      vertical-align: inherit;
      margin-left: 0;
    }
  }
}

.OrderSummary-line {
  margin: 6px 0px;

  .OrderSummary-Price {
    float: right;
    font-weight: 700;

    .OrderSummary-Price--light {
      font-weight: 400;
    }
  }

  &:first-child {
    margin-top: 0px;
  }

  &:last-child {
    margin-bottom: 0px;
  }

  &.OrderSummary-GrandTotal {
    margin: 10px 0px;
    padding: 10px 0px;
    color: $blue;
    font-weight: 600;
    font-size: 1.2em;
    line-height: 1.5em;
    border-top: 1px solid $grey-light;
    border-bottom: 1px solid $grey-light;

    .OrderSummary-Price {
      font-size: 1.5em;
    }

    &:last-child {
      margin-bottom: 0px;
      padding-bottom: 0px;
      border-bottom: none;
    }
  }
}

.OrderSummary-label {
  float: left;

  .OrderSummary-label-line2 {
    display: block;
  }
}

.OrderSummary-flyout {
  display: inline-block;
  font-weight: 400;

  .flyout-trigger {
    font-size: 0.75em;
  }

  .flyout-modal {
    .validation-group {
      min-height: 70px;
    }

    .btn-fake-link {
      line-height: 38px;
    }
  }
}

.OrderSummary-shippingPassLogo--green {
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  display: inline-block;
  width: 93px;
  height: 16px;
  position: relative;
  top: 3px;
}
