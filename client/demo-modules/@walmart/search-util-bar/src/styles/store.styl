$red = #f42121;
$blue = #007dc6;

.desktop-bar-store {
  .flyout-modal {
    label:first-child {
      margin-top: 0;
    }
  }

  .enter-zipcode {
    padding: 0;

    & > span {
      font-size: 13px;
    }

    form {
      margin: 15px 0 10px;
      overflow: hidden;

      input {
        float: left;
        width: 124px;
        height: 30px;
        margin: 0 10px 0 0;
      }

      .btn {
        height: 30px;
      }
    }
  }

  .error-message {
    display: block;
    margin-top: 10px;

    font-size: 12px;
    font-weight: 600;
    line-height: 1.3;
    color: $red;
  }

  .store-availability-content {
    .error-message {
      padding: 0 0 15px 20px;
    }

    .error-block {
      height: 30px;
    }

    .block-list {
      clear: both;
    }

    .store-availability-editable {
      float: left;
      width: auto;
      height: 24px;
      padding: 4px 0 0;
      margin: 0 0 14px;
    }

    .store-location-display {
      float: left;
      margin-left: 5px;

      .store-zipcode {
        margin-right: 5px;

        color: $blue;
        font-weight: 600;
        font-size: 14px;
      }

      a {
        font-size: 12px;
      }

      .input-wrapper {
        float: left;

        input {
          float: left;

          width: 80px;
          margin: 0 10px 0;
        }

        span {
          width: 40px;
          padding: 5px 0;
        }
      }
    }

    .spinner-page-load {
      min-height: 110px;

      .spinner {
        margin-top: 30%;
      }
    }

    .block-list {
      margin: 0 0 0 20px;

      .option:first-child {
        margin-top: 0;
      }

      .option-content {
        font-weight: 400;
      }
    }

    .store-show-online {
      clear: both;

      padding-top: 16px;
      border-top: 1px solid rgb(217, 217, 217);
    }
  }
}
