.store-header {

  .horizontal {
    display: inline-block;
    margin-right: 5px;
  }

  .title-text {
    to-rem(font-size, 30px);
    margin-right: 15px;
    font-weight: 700;
    line-height: 1.5;

    +breakpoint($breakpoint-m) {
      to-rem(font-size, 24px);
    }
  }

  .store-address-block {

    +breakpoint($breakpoint-m) {
      text-align: center;
      border-bottom: none;
    }
  }

  .store-line {
    border-bottom: 1px solid $grey-very-light;

    +breakpoint($breakpoint-m) {
      border-bottom: none;
    }
  }

  .store-name {
    to-rem(font-size, 16px);

    +breakpoint($breakpoint-m) {
      to-rem(font-size, 24px);
    }
  }

  .store-phone {
    to-rem(font-size, 15px);

    +breakpoint($breakpoint-m) {
      to-rem(font-size, 16px);
    }
  }

  .store-address-phone {
    margin-bottom: 10px;
    line-height: 1.5;

    to-rem(font-size, 14px);

    +breakpoint($breakpoint-m) {
      margin-bottom: auto;
    }
  }

  .store-address {
    display: block;

    to-rem(font-size, 14px);
  }

  .store-hours-block {
    to-rem(font-size, 14px);
    line-height: 22px;
    margin-top: 5px;

    +breakpoint($breakpoint-m) {
      to-rem(font-size, 16px);
    }
  }

  .store-hours-days {
    display: block;

    to-rem(font-size, 15px);

    +breakpoint($breakpoint-m) {
      padding-right: 37px;
      display: inline;

      to-rem(font-size, 16px);
    }
  }

  .store-hours-time {
    opacity: .7;

    +breakpoint($breakpoint-m) {
      float: right;
      opacity: 1;
    }
  }

  .store-hours-title {
    display: block;

    +breakpoint($breakpoint-m) {
      text-align: center;
    }
  }

  .store-hours {

    +breakpoint($breakpoint-m) {
      width: 247px;
      margin-left: auto;
      margin-right: auto;
      text-align: center;
    }
  }

  .store-open-24-hours {
    font-weight: 600;
    color: #76c143;
    to-rem(font-size, 14px);

    +breakpoint($breakpoint-m) {
      text-align: center;
    }
  }
}

.coupons-tab-wrapper {

  .store-name {
    to-rem(font-size, 30px);

    +breakpoint($breakpoint-m) {
      to-rem(font-size, 24px);
    }
  }

  .store-address {
    display: block;

    to-rem(font-size, 16px);
    color: #888;
  }

  .store-line {
    border-bottom: none;
  }
}
