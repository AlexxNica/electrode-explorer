    .paginator-hairline-btn-light-no-hover {
      +breakpoint($breakpoint-m) {
        display: inline-block;
      }
    }
  }

  .carousel-paginator-list-mini {
    li {
      margin-left: $xs-spacing;

      +breakpoint($breakpoint-m) {
        margin-left: 16px;
      }

      &:first-child {
        margin-left: 0;
      }
    }

    .carousel-paginator-item {
      width: 7px;
      height: @width;

      background: $grey-light;
      box-shadow: 0 0 1px rgba(0, 0, 0, .2), 1px 1px 3px rgba(0, 0, 0, .25);

      +breakpoint($breakpoint-m) {
        width: 10px;
        height: @width;
      }
    }

    .slick-active > .carousel-paginator-item {
      background: $grey-medium;
    }
  }

  .slider-decorator-0,
  .slider-decorator-1 {
    height: 100%;

    .paginator-hairline-btn {
      height: inherit;
    }
  }
}
