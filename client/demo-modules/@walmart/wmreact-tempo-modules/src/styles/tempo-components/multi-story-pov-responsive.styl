@require "../helper-components/pov-story";

.MultiStoryPOVResponsive {
  margin-bottom: $xs-spacing;

  +breakpoint($breakpoint-m) {
    margin-bottom: $s-spacing;
  }

  // Ensure correct height while loading
  .slider-list {
    height: $tempo-pov-height.xs !important;

    +breakpoint($breakpoint-s) {
      height: $tempo-pov-height.s !important;
    }

    +breakpoint($breakpoint-m) {
      height: $tempo-pov-height.m !important;
    }

    +breakpoint($breakpoint-l) {
      height: $tempo-pov-height.l !important;
    }
  }

