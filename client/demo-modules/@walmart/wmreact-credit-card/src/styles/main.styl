$baseCreditCardPath ?= "~@walmart/wmreact-credit-card/images/"; // @stylint ignore
$cc-medium-font-size = 16px;
$cc-large-font-size = 20px;
$cc-base-spacing = 12px;
$cc-medium-space = 20px;
$cc-default-border = 1px solid #c2cfd6;

.credit-card {
  position: relative;
  min-height: 135px;
  width: 100%;
  border: $cc-default-border;
  border-radius: 4px;
  background-color: $white;
  color: $grey-dark;
  font-size: $cc-medium-font-size;
  font-weight: 400;
  line-height: 1.3;
  padding: 0;

  .card-body {
    padding: 10px 10px 0 10px;
  }
  .inner-card-body {
    position: relative;
  }
  .payment-option {
    position: absolute;
    right: 0;
    top: 4px;
  }

  .credit-card-full-actions {
    margin-top: ($cc-medium-space - $cc-base-spacing);
    & > * {
      width: 100%;
      text-align: center;
      margin: $cc-base-spacing 0 0 0;
    }
  }
  .credit-card-fullname {
    margin-top: 5px;
  }
  .credit-card-actions {
    position: absolute;
    right: 0;
    bottom: 0;

    .btn-fake-link {
      font-size: 14px;
      line-height: 14px;
      padding: 0 $cc-medium-space $cc-base-spacing 0;
    }
    .btn-fake-link.last {
      padding-right: $cc-base-spacing;
    }
  }

  .confirm-delete {
    background-color: #f2f8fd;
    height: 100%;
    padding: 10px;
    border-radius: 4px;

    h5 {
      margin: 0 0 ($cc-base-spacing / 2) 0;
    }
    .credit-card-actions {
      position: absolute;
      bottom: 5px;
    }

  }
  .credit-card-fullname {
    font-weight: 600;
  }
}

.credit-cards-wrapper {
  position: relative;
  min-height: 55px; // for the spinner
  .alert-block {
    margin: $cc-base-spacing 0;
  }

  & > .Grid {
    margin: 0 (- $cc-base-spacing) (- $cc-medium-space);
  }

  .see-more {
    margin-top: $cc-medium-space;
  }
}
.credit-card-wrapper {

  position: relative;

  .credit-card-fullname {
    margin-top: 5px;
  }

  .padded-card {
    padding: 0 $cc-base-spacing $cc-medium-space;
    position: relative;
  }
  .padded-card.edit-mode:before {
    z-index: 2;
    content: "";
    position: absolute;
    display: block;
    margin-left: -5px;
    left: 50%;
    bottom: -9px;
    width: 18px;
    height: 18px;
    border: $cc-default-border;
    border-width: 1px 1px 0 0;
    pointer-events: none;
    background-color: #fff;
    -webkit-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }

  .add-credit-card {
    color: $blue;
    padding: 25px;
    font-size: $cc-large-font-size;
    white-space: normal;
    background-color: $white;
    &:hover {
      border-color:$blue-secondary-active;
      background-color: $white;
    }
    &:focus{
      background-color: $white;
    }
    &:hover, &:active {
      background-color: $white;
      color: $blue-hover;
    }
  }
}

+breakpoint($breakpoint-s) {
  .credit-card-wrapper:nth-child(2n) .edit-form-wrapper {
    margin-left: -100%;
    position: relative;
  }
}

+breakpoint($breakpoint-l) {
  .credit-cards-wrapper:not(.full-width) {
    .credit-card-wrapper:nth-child(2n) .edit-form-wrapper {
      margin-left: 0;
    }

    .credit-card-wrapper:nth-child(3n) .edit-form-wrapper {
      position: relative;
      margin-left: -200%;
    }
    .credit-card-wrapper:nth-child(3n + 2) .edit-form-wrapper {
      margin-left: -100%;
      position: relative;
    }
  }
}

+breakpoint($breakpoint-m) {
  .credit-cards-wrapper.full-width {
    .credit-card-wrapper:nth-child(2n) .edit-form-wrapper {
      margin-left: 0;
    }

    .credit-card-wrapper:nth-child(3n) .edit-form-wrapper {
      position: relative;
      margin-left: -200%;
    }
    .credit-card-wrapper:nth-child(3n + 2) .edit-form-wrapper {
      margin-left: -100%;
      position: relative;
    }
  }
}

+breakpoint($breakpoint-l) {
  .credit-cards-wrapper.full-width {
    .credit-card-wrapper:nth-child(3n) .edit-form-wrapper {
      margin-left: 0;
    }
    .credit-card-wrapper:nth-child(3n + 2) .edit-form-wrapper {
      margin-left: 0;
    }
    .credit-card-wrapper:nth-child(4n) .edit-form-wrapper {
      position: relative;
      margin-left: -300%;
    }
    .credit-card-wrapper:nth-child(4n + 2) .edit-form-wrapper {
      position: relative;
      margin-left: -100%;
    }
    .credit-card-wrapper:nth-child(4n + 3) .edit-form-wrapper {
      position: relative;
      margin-left: -200%;
    }
  }
}

.credit-cards-wrapper.no-cards .edit-credit-card-wrapper {
  h3 {
    margin-top: 0;
  }
}

.edit-credit-card-wrapper .padded-card + .edit-form-wrapper .edit-form,
.edit-credit-card-wrapper .padded-card + .edit-form-wrapper + .edit-form-wrapper .edit-form{
  border: $cc-default-border;
  border-radius: 4px;
  background-color: white;
}

.edit-credit-card-wrapper .edit-form-wrapper {
  width: 100%;
  margin-bottom: $m-margin;
  .edit-form {
    padding: 0 ($cc-base-spacing - 1) ($cc-base-spacing - 1) ($cc-base-spacing - 1);
  }
  .state-chooser-wrapper .chooser {
    width: 100%;
  }
  .edit-form-actions {
    text-align: right;
    margin-top: $m-margin;
    padding-bottom: $m-padding;
    button {
      margin-right: $cc-medium-space;
    }
    .last {
      margin-right: 0;
    }
    .save-btn {
      to-rem(font-size, 18px);
    }
    .cancel-btn {
      to-rem(height, 38px);
    }
  }

  +breakpoint($breakpoint-s) {
    width: 200%;
  }

  +breakpoint($breakpoint-l) {
    width: 300%;
    padding:0 $cc-base-spacing;
  }

}

.full-width .edit-credit-card-wrapper .edit-form-wrapper {
  +breakpoint($breakpoint-m) {
    width: 300%;
    padding: 0 $cc-base-spacing;
  }

  +breakpoint($breakpoint-l) {
    width: 400%;
    padding: 0 $cc-base-spacing;
  }
}
.credit-card-cvv-help-image {
  width: 56px;
  height: 39px;
  margin-top: 8px;
  background: url(https://ll-us-i5.wal.co/dfw/63fd9f59-b8e7/8131979a-3163-4a56-a701-0e7f53ecca72/v1/609b12147cf29ff14833dacdd786f25c.png) no-repeat;
  &.amex {
    background: url(https://ll-us-i5.wal.co/dfw/63fd9f59-b8e7/8131979a-3163-4a56-a701-0e7f53ecca72/v1/b8941db324dd708b0487ba981478d778.png) no-repeat;
  }
}

.credit-card, .edit-form{
  option[disabled] {
    display:none;
  }

  .expiration-date-chooser.error .chooser-option-current {
    border-color: #f42121 !important; // @stylint ignore
  }
  .chooser-option-current {
    box-sizing: content-box;
    background-color: $white;
  }
  .payment-option {
    display: inline-block;

    background: url(https://ll-us-i5.wal.co/dfw/63fd9f59-b8e7/8131979a-3163-4a56-a701-0e7f53ecca72/v1/771a867dce1c4ab054a6fec24eb8673b.png) no-repeat;
    vertical-align: middle;
    margin: 0;
    width: 30px;
    height: 20px;
  }

  .american-express {
    background-position: 0 0;
  }

  .walmart-credit-card {
    background-position: -35px 0;
  }

  .visa {
    background-position: -70px 0;
  }

  .discover {
    background-position: -105px 0;
  }

  .mastercard {
    background-position: -140px 0;
  }

  .walmart-mastercard {
    background-position: -175px -24px;
  }

  .payment-inactive {
    opacity: .3;
  }

  .cvv-notification-flyout {
    .flowtip-flyout-modal {
      background-color: #fff6de;
    }

    .flowtip-flyout-caret:after {
      border-color: transparent !important;
    }

    .flowtip-flyout-caret:before {
      background-color: #fff6de;
    }
  }

  .cvv-field {
    position: relative;
  }
  .postal-code-wrapper {
    float: right;
    width: 33%;
    min-width: 90px;
  }
  .form-control-with-icon--error input{
    border-color: $red;
  }
  .expiration-date-chooser.error select{
    border-color: $red;
  }
  .external-error-icon {
    color: $red;
    margin-left: 5px;
  }


  .credit-card-expired-label {
    color: $red;
    font-weight: bold;
    margin-top: 5px;
    font-size: 12px;
  }

}
.credit-card.is-expired {
  color: $grey-medium;
}
.edit-credit-card-wrapper {
  .edit-form-part {
    padding: 0 $cc-base-spacing;
  }
  .edit-form > .Grid {
    margin: 0 (- $cc-base-spacing);
  }
  .edit-form .payment-option {
    margin-right: 5px;
  }
  .validation-group {
    margin-top: 0;
  }
  &.floating-labels .form-group, &.floating-labels .expiration-date-chooser, &.floating-labels .select-state {
    & > .form-label {
      margin-left: 0.625em;
      color: $grey-medium;
      .flowtip-flyout {
        color: $black;
      }
    }
  }
  .form-group {
    font-size: 15.4px;
  }
  .form-group--float {
    margin-top: 6px;
  }
  .form-group--float .validation-group {
    margin-top: 15px;
  }
  .form-label-float {
    top: 25px;
  }

  .form-label-float--floating {
    top: 0;
    font-size: 0.95em;
  }
}

.select-date-month, .select-date-year, .select-state {
  /* TODO: HACK: Should be supported natively. */
  &.potato-ie-hackarino .select-field--caret {
    display: none !important;
  }
  &.potato-ie-hackarino .select-field {
    padding-right: 0 !important;
  }
  .select-field--caret {
    pointer-events: none;
  }
  label {
    display: inline-block;
    .validation-group {
      margin-top: 0;
    }
  }
  /* TODO: HACK: Should be supported natively. */
  .select-field {
    height: 40px; /* Normal value of 2.5em doesn't match other form elems */
    padding-right: 25px;
  }
  .select-field--error {
    padding-right: 30px; /* Needed if `display` is not `block`. */
  }
  /* TODO: HACK: Should be supported natively. */
  .form-group--disabled {
    opacity: 0.6; /* Close approximation? Maybe? */
    .select-field--caret {
      /* This is terrible. Total hack. Super hack. ULTRA HACK. */
      background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='22' height='6'><polygon fill='%23C2CFD6' points='5.5,6 0,0 11,0'/></svg>");
    }
  }
}

.select-state .form-label {
  display: block;
}

+breakpoint($breakpoint-m) {
  .flyout-left-m .flyout-modal {
    left: auto !important;
    bottom: auto;
    top: 50%;
    right: 100%;
    margin-right: 16px;
    transform: translateY(-50%);
    &::before{
      left: 100%;
      background:white;
      margin-right: -9px;
      transform: rotate(45deg);
      top:50%;
    }
    &::after{
      display:none;
    }
  }
}
