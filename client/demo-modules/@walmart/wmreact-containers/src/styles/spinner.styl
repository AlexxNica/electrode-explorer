  background-repeat: no-repeat;
}

.spinner-demo {
  position: relative;
  width: 270px;
  height: 200px;
}

.spinner {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  width: 1em;
  height: @width;
  margin: auto;

  animation: spin-clockwise 1.5s linear 0s infinite;
  background-repeat: no-repeat;
  background-position: 0 0;
  font-size: 55px;
}

.spinner-small {
  font-size: 28px;
}

.spinner-mini {
  font-size: 20px;
}

.no-cssanimations .spinner:after {
  content: "";

  display: block;
  width: 100%;
  height: @width;

  background-image: url("//i5.walmartimages.com/dfw/63fd9f59-7ec1/k2-_29b3ff4e-51f9-4fe1-b991-0e2ecd71d80f.v1.gif");
}

.no-cssanimations .spinner-small:after {
  background-image: url("//i5.walmartimages.com/dfw/63fd9f59-6d47/k2-_25f436c1-4a79-4a85-8d47-d3d9e1b2ffb8.v1.gif");
}

.no-cssanimations .spinner-mini:after {
  background-image: url("//i5.walmartimages.com/dfw/63fd9f59-cb38/k2-_c64da396-3251-4aea-b5c6-154258b2bf59.v1.gif");
}

.spinner-backdrop {
  wmzindex("spinner-backdrop");

  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  // Use a png with the same values as the below `rgba` for browsers that don't support rgba
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVQIHWP4vx8AAsABvxAEKVEAAAAASUVORK5CYII=");
  background: rgba(255, 255, 255, .75);
}

.spinner-backdrop-fixed {
  position: fixed;
}
