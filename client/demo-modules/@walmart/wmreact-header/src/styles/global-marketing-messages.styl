.header-GlobalMarketingMessages {
  to-rem(font-size, 14px);

  color: $orange;
  white-space: nowrap;
}

.header-GlobalMarketingMessages--medium {
  height: 38px;
  margin-top: 2px;
  padding-right: 5px;

  color: $white;
  line-height: @height;
}

.header-GlobalMarketingMessages--small {
  width: 100%;
  height: 36px;
  border-bottom: 1px solid $grey-very-light;

  background-color: $white;
  line-height: @height;
}

.header-GlobalMarketingMessages-list {
  list-style-type: none;
}

.header-GlobalMarketingMessages-link {
  &, &:hover, &:focus {
    color: inherit;
  }
}
