$sticky-nav-shadow = 0 3px 2px -2px rgba(0, 0, 0, .2), 0 -2px 1px -2px rgba(0, 0, 0, .2);

.StickyNav-tabs {
  margin: 10px 0;
  box-shadow: $sticky-nav-shadow;

  .fixie {
    background-color: $white;
    box-shadow: $sticky-nav-shadow;
  }
}

.StickyNav-head-list {
  list-style: none;
}

.StickyNav-head-list-item {
  to-rem(font-size, 16px);

  position: relative;
  height: 44px;
  
  line-height: 44px;

  &.active {
    color: $black;
  }

  &.active:before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background-color: $blue;
  }
}
