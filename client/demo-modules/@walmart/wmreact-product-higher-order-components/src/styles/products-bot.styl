$prod-Bot-boxShadow ?= 1px 1px 2px rgba(0, 0, 0, .1);
$prod-BotPadding--xs ?= $xs-spacing;
$prod-BotPadding--s ?= $s-spacing;
$prod-BotPadding--m ?= $s-spacing;
$prod-BotPadding--l ?= $m-spacing;

$prod-BotMargin-xs ?= $xs-spacing;
$prod-BotMargin-s ?= $s-spacing;
$prod-BotMargin-m ?= 0px;

.prod-PositionedRelative {
  position: relative;
}

.prod-Bot {
  +breakpoint($breakpoint-m){
    box-shadow: $prod-Bot-boxShadow;
    border: 1px solid $grey-cool;
    border-radius: 4px;
  }

  .prod-BotRow {
    margin-left: -($prod-BotMargin-xs);
    margin-right: -($prod-BotMargin-xs);
    padding: $xs-spacing $prod-BotPadding--xs;

    +breakpoint($breakpoint-s) {
      margin-left: -($prod-BotMargin-s);
      margin-right: -($prod-BotMargin-s);
      padding: $xs-spacing $prod-BotPadding--s;
    }

    +breakpoint($breakpoint-m) {
      margin-left: $prod-BotMargin-m;
      margin-right: $prod-BotMargin-m;
      padding: $xs-spacing $prod-BotPadding--m;
    }

    +breakpoint($breakpoint-l) {
      padding: $xs-spacing $prod-BotPadding--l;
    }
  }

  .prod-BotRow--colored {
    background-color: $blue-light;
    .chooser-option-current {
      background-color: $white;
    }
  }

  .prod-showBottomBorder {
    border-bottom: 1px solid $blue-pale;
  }
}
