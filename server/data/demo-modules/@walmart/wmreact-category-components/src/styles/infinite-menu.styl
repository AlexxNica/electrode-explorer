@keyframes dropHeader {
  0% {
    transform: translateX(-20px);
    opacity: 0;
  }

  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

.InfiniteMenu {  // @stylint ignore
  position: relative;

  border-bottom: 1px solid #eaeaea;
  border-top: 1px solid #eaeaea;
  display: block;
  margin-bottom: 10px;
  overflow: hidden;
  padding-left: 8px;
  padding-right: 8px;
  width: 100%;

  background-color: #f5f5f5;
  white-space: nowrap;
  text-align: left;

  +breakpoint($breakpoint-s) {
    padding-left: 12px;
    padding-right: 12px;
  }
}

.InfiniteMenu-List {  // @stylint ignore
  position: relative;

  margin: 0;
  padding: 0;
  width: 100%;

  animation: dropHeader .3s ease-in 1;
  list-style: none;
  text-align: left;
  // easing function for overshoot animation
  transition: margin-left cubic-bezier(.18, .89, .32, 1.28);
}

.InfiniteMenu-Item {  // @stylint ignore
  padding: 7px 12px 6px;
  display: inline-block;

  to-rem(font-size, 16px);

  a {
    text-decoration: none;
    color: $grey-medium;
  }

  &.active {
    border-bottom: solid 3px $blue;

    a {
      font-weight: 600;
      color: $black;
    }
  }
}
