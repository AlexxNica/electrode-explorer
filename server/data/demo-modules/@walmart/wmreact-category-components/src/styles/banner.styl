.Banner { // @stylint ignore
  padding: $banner-message-padding 0;
  background-color: $black;

  +breakpoint($breakpoint-s) {
    padding-left: 16px;
  }

  +breakpoint($breakpoint-m) {
    padding-top: 23px;
    padding-bottom: 23px;
  }

  +breakpoint($breakpoint-l) {
    padding-left: $m-spacing;
  }

  +breakpoint($breakpoint-xl) {
    padding: 30px 0 $l-spacing $l-spacing;
  }
}

.Banner-header { // @stylint ignore
  to-rem(font-size, 24px);

  letter-spacing: .6px;
  line-height: 30px;
  text-align: center;

  +breakpoint($breakpoint-m) {
    to-rem(font-size, 34px);
    line-height: 29px;
  }

  +breakpoint($breakpoint-l) {
    to-rem(font-size, 42px);
  }
}

.Banner-subHeader { // @stylint ignore
  to-rem(font-size, 14px);

  letter-spacing: .6px;
  line-height: 20px;

  +breakpoint($breakpoint-m) {
    to-rem(font-size, 20px);

    margin-top: $xs-spacing;

    line-height: 26px;
  }

  +breakpoint($breakpoint-m) {
    to-rem(font-size, 20px);

    margin-left: 17px;
  }

  +breakpoint($breakpoint-l) {
    to-rem(font-size, 30px);

    margin-left: 31px;
  }
}

.Banner-heading { // @stylint ignore
  padding-left: $xs-spacing;
}

.header-GlobalMarketingMessages-list li { // @stylint ignore
  text-align: center;
}
