@require "~@walmart/wmreact-carousel/src/styles/carousel";

.bundle-image-list.carousel-list {
  .carousel-paginator-list {
    padding-top: 10px;
  }

  .list-item {
    width: calc(100% - 48px);
  }

  .slider-slide {
    text-align: right;
  }

  .paginator-hairline-btn {
    height: 60px;
    width: 40px;
    background-color: $white;
    background-size: 32%;
    box-shadow: 0 0 2px 0 $grey-light;
  }

  .bundle-image {
    width: 100%;
  }
}
