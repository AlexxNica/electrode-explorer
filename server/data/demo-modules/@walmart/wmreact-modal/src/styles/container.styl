.modal_container_base {
  fixed(top 0 right 0 bottom 0 left 0);
  wmzindex("modal");

  max-width: 100vw;
  height: 100%;

  transform-style: preserve-3d;

  display: block;
}

.modal_container_shade {
  fixed(top 0 right 0 bottom 0 left 0);
  wmzindex("negative");

  display: block;
  background: $white;
  opacity: 0.5;
}