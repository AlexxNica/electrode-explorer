/*!
Stars
.stars-small - Small star variant (10x10).
.stars-medium - Medium star variant (13x13).
.stars-large - Large star variant (28x28).
Styleguide 10.3
*/

.stars {
  color: $grey-light;
  // Remove default space between inline-block elements.
  font-size: 0;
  line-height: 1;
}

.star {
  display: inline-block;
  width: 18px;
  height: @width;
  margin-left: 3px;

  background-repeat: no-repeat;
  font-style: normal;
  vertical-align: middle;

  &:first-child {
    margin-left: 0;
  }
}

.stars-container,
.stars-reviews {
  cursor: pointer;
}

.stars-reviews {
  color: $blue;
  margin-left: 18px;
  font-size: 100%;
  font-weight: 600;
  vertical-align: middle;
}

.stars-and-up {
  margin-left: 5px;

  font-size: 12px;
  font-weight: 400;
  vertical-align: middle;
}

.stars-small {
  .star {
    width: 10px;
    height: @width;
    margin-left: 2px;

    &:first-child {
      margin-left: 0;
    }
  }

  .stars-reviews {
    margin-left: 4px;

    font-size: 12px;
    font-weight: 400;
  }
}


.stars-medium {
  .star {
    width: 13px;
    height: @width;
    margin-left: 3px;

    &:first-child {
      margin-left: 0;
    }
  }

  .stars-reviews {
    margin-left: 4px;

    font-size: 13px;
    font-weight: 400;
  }
}

.stars-large {
  .star {
    width: 28px;
    height: @width;
    margin-left: 5px;

    &:first-child {
      margin-left: 0;
    }
  }
}

