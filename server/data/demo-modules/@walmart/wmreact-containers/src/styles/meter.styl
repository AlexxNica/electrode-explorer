.meter-circle {
  position: relative;

  float: left;
  width: 1em;
  height: 1em;
  margin: 0 .1em .1em 0;

  border-radius: 50%;

  background-color: $grey-very-light;
  font-size: 69px;
}

.meter-circle *, .meter-circle *:before, .meter-circle *:after {
  box-sizing: content-box;
}

