$business-tools-dropdown-width-l = 213px;
$business-tools-dropdown-width-xl = 220px;
$business-tools-dropdown-height-xl = 520px;
$lefthand-nav-dropdown-heading-color = #f2f2f2;



.header-business-tools-nav {
  display: inline-block;
  width: 140px;
}

.header-business-tools-nav .button-business-tools {
  border-right: none;
  margin-left: 25px;
  width: 170px;
}

// inside dropdown list
.header-business-tools-nav {

.header-GlobalLefthandNav-toggle {
 position: absolute;
  top: 95px;
  to-rem(font-size, 14px);
  white-space: nowrap;
  padding-bottom: 8px;
  height: 45px;
  // Fix layout thrashing due to FOUT when
  // webfonts are loading.
  .wf-loading & {
    to-rem(font-size, 15px);
    letter-spacing: -.2px;
  }
}


.header-GlobalLefthandNav-dropdown-list-heading {
 background-color: $lefthand-nav-dropdown-heading-color;
  margin-top: 8px;
  width: 100%;
  height: 25px;
}

  .header-GlobalLefthandNav-panel {
    width: 440px;
  }

  .header-GlobalLefthandNav-panel-column {
    &:nth-child(3), &:nth-child(4) {
      display:none;
    }
  }
  .header-GlobalLefthandNav-dropdown-list {
    width: $business-tools-dropdown-width-xl;

    .header-GlobalLefthandNav-dropdown-tools-links {
      a:first-child {
        padding-top: 5px;
      }
    }

    a:hover, button:hover, .wmicon:hover {
      color: $blue-secondary-hover;
    }
    a, button {
      cursor: pointer;
      padding-left: $m-spacing;
      margin-left:0;
    }

  }
}
