@media screen and (min-width: 64em) {

  .header-Header-mainNav .dropdown-link:after {
    content: "";
    display: inline-block;
    height: 5px;
    left: 5px;

    vertical-align: top;
    width: 5px;
    border-top-color: $blue;
    border: 4px solid $blue;
    color: $blue;
    top: 3px;
    border-style: solid;
    border-width: 2px 2px 0 0;
    transform: rotate(135deg);
  }

  .header-Header-mainNav .dropdown-link.is-active:after {
    transform: rotate(315deg);
  }

