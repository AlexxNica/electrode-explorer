$mobile-input-grey = #f2f2f2;
$mobile-input-text-grey = rgba(66, 66, 66, .8);

$header-fixed-height = 50px;
$header-box-shadow = 0 2px 3px rgba(0, 0, 0, .2);

.header-Header {
  font-smoothing();

  background-color: $white;

  .btn-fake-link:hover, .btn-fake-link:focus, .btn-fake-link:active{
    text-decoration:none;
  }

  // don't show flash of highlight color when opening offcanvas nav
  // have to use both for iOS and some androids
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-tap-highlight-color: transparent;
}

.header-Header-wrapper {
  wmzindex("header");
  position: relative;

  ::-webkit-input-placeholder {
    text-align: center;
    color: $mobile-input-text-grey;
  }

  :-moz-placeholder { /* Firefox 18- */
    text-align: center;
    color: $mobile-input-text-grey;
  }

  ::-moz-placeholder {  /* Firefox 19+ */
    text-align: center;
    color: $mobile-input-text-grey;
  }

  :-ms-input-placeholder {
    text-align: center;
    color: $mobile-input-text-grey;
  }

  a, .btn-fake-link {
    color: $black;
  }

  /**
  * Sticky Header
  */
  @keyframes header-slide-down {
    0% {
      transform: translateY(-100%);
    }

    100% {
      transform: translateY(0%);
    }
  }
}

.header-HeaderPrimaryLarge {
  background-color: white;
}

.header-HeaderPrimary-icon {
  to-rem(font-size, 20px);

  height: 40px;
  width: 44px;
  line-height: @height;

  color: $black;

  &:hover {
    color: $blue-secondary-hover;
  }
}

.header-HeaderPrimary-logoWrapper {
  width: 100%;

  +breakpoint($breakpoint-l) {
    width: auto;
    padding-top: 2px;
  }
}

.header-Header, .header-HeaderPrimary {
  background-color: white;
  color: $black;
}

.header-SearchbarWrapper {
  background-color: white;
}

.header-HeaderPrimary-searchbarWrapper {
  background-color: white;
}

.header-GlobalSearch-input {
  border: 1px solid rgba(34, 34, 34, .15);
}

.header-GlobalEyebrowNav-link {
  color: $black;
}

.header-GlobalSearch-submit, .header-GlobalSearch-submit:hover, .header-GlobalSearch-submit:focus {
  background-color: rgba(65, 65, 65, .3);
  color: white;
  display: block;
  box-sizing: border-box;
}

@media screen and (max-width: 1023px) {
  div.header-HeaderPrimary {
    box-shadow: none;
  }
}

@media screen and (max-width: 767px) {
  .header {
    &-SearchbarWrapper {
      box-shadow: 0 2px 3px rgba(0, 0, 0, .2);
    }

    &-GlobalSearch{
      border: none !important;
      margin: 10px 0;
      background-color: $mobile-input-grey;

      &-submit {
        display: none;
      }

      &-input {
        height: 32px !important;
        background-color: $mobile-input-grey;
        padding: 0 15px;
        border-radius: 100px !important;
      }

      .arrange-fill {
        float: left;
      }
    }
  }
}

@media screen and (min-width: 768px) and (max-width: 1023px) {
  .header-SearchbarWrapper {
    box-shadow: 0 2px 3px rgba(0, 0, 0, .2);
  }

  .header-GlobalSearch{
    border: none !important;
    margin: 10px 0;
    background-color: $mobile-input-grey;

    &-submit {
      background: $mobile-input-grey;
      color: rgba(65, 65, 65, .8);
      font-size: 16px;
      font-weight: lighter;
    }

    &-input {
      height: 32px !important;
      background-color: $mobile-input-grey;
      padding: 0 15px;
      border-radius: 100px !important;
    }
  }
}

