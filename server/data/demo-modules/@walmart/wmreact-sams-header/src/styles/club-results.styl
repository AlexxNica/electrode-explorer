.club-results {
  background-color: white;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, .29);
  overflow-y: scroll;
  max-height: 480px;
  max-width: 500px;
  min-width: 320px;
  min-height: 400px;
  width: 70vw;
  height: 70vw;

  a {
    font-size: 14px;
    color: $blue;
    primary-font("medium");
  }

  .separate-line {
    background-color: rgba(65, 65, 65, .2);
    clear: both;
    margin-top: 0;
  }

  .cr-header h2 {
    display: inline-block;
    primary-font("medium");
    font-size: 20px;
    margin: 20px auto;
  }

  h3, label {
    font-size: 16px;
    line-height: 1.1;
    color: $black;
    display: inline;
    primary-font("bold");
  }

  .cr-header-section label {
    primary-font("regular");
    padding-left: 10px;
  }

  .refine-service-link {
    margin: 10px auto;
    display: inline-block;
  }

  .cr-filter-panel {
    display: none;
    background-color: #f6f6f6;
  }

  .active {
    display: block;
  }

  .flip {
    transform: rotate(180deg);
  }

  .cr-filter-section {
    margin: auto;
  }

  .cr-filter-options {
    padding: 10px 10px;
  }

  // Overwrite default style
  .option {
    margin-top: 0;
    display: inline-block;
  }

  .option label:before, .option-content:before {
    width: 16px;
    height: 16px;
    border-radius: 2px;
    border: solid 1px rgba(65, 65, 65, .4);
  }

  .option input:checked + label:before {
    background-color: $blue;
    line-height: normal;
    border-color: $blue;
  }

  .cr-filter-options label {
    font-size: 14px;
    color: $black;
    primary-font("regular");
    font-weight: normal;
  }

  .cr-option-buttons {
    float: right;
    margin: 12px auto;
  }

  .btn {
    font-size: 14px;
    line-height: 1.3;
    primary-font("bold");
    border-radius: 2px;
    padding: 0 20px;
  }

  .cr-cancel-button {
    border: solid 1px #4ca90c;
    background-color: #fff;
    color: #4ca90c;
    margin-right: 10px;
    width: 80px;
    height: 30px;
  }

  .cr-apply-button {
    background-color: #4ca90c;
    width: 80px;
    height: 30px;
  }

  .cr-club-info label, .cr-distance label {
    display: block;
  }

  .cr-location {
    float: left;
    width: 160px;
    margin: 12px auto;
  }

  .cr-distance {
    float: right;
    width: auto;
    margin: 12px auto;
    text-align: right;

    a {
      color: $blue;
    }
  }

  .cr-location label {
    font-size: 14px;
    line-height: 1.3;
    color: $black;
  }

  .cr-club-name {
    primary-font("medium");
  }

  .cr-club-address {
    primary-font("regular");
  }

  .cr-distance {
    primary-font("regular");
    font-size: 14px;
    color: rgba(66, 66, 66, .8);
  }

  .cr-distance .cr-success-icon {
    width: 14px;
  }

  .cr-distance .cr-your-club {
    padding-left: 5px;
  }

  .cr-icon-close {
    float: right;
  }
}

@media (min-width: 1024px) {
  .club-results {
    margin: 0 auto;
    padding: 20px 20px;
    z-index: 2500;
  }

  .cr-header h2 {
    display: none;
  }

  .option {
    margin-top: 0;
    width: 8em;
    margin-right: auto;
  }

  .cr-change-link {
    float:right;
  }

  .cr-header-section {
    margin-bottom: 10px;
    clear: both;
  }

}

@media screen and (max-width: 1023px) {
  .club-results {
    padding: 10px 10px;
  }

  .option {
    margin: auto 0;
    width: 11em;
    margin-right: auto;
  }

  .cr-change-link {
    float:right;
  }

  .cr-header-section {
    margin-bottom: 10px;
  }


}

@media screen and (max-width: 767px) {
  .club-results {
    padding: 10px 10px;
  }

  .option {
    margin: auto 0;
    width: 8em;
    margin-right: auto;
  }

  .cr-location {
    width: 140px;
  }

  .cr-change-link {
    float:right;
  }

  .cr-header-section {
    margin-bottom: 10px;
  }

}

@media screen and (max-width: 479px) {
  .club-results {
    padding: 10px 10px;
  }

  .cr-change-link {
    float: none;
    display: block;
  }

  .cr-distance {
    width: auto;
  }

  .cr-header-section {
    margin-bottom: 15px;
  }
}
